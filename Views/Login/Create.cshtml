@model Familia.Models.Login

@{
    ViewData["Title"] = "Create";
}


@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>


<div class="position-absolute top-50 start-50 translate-middle">
    <h1>Create</h1>
    <h4>Login</h4>
    <hr />

    <form class="row g-3 align-items-center" asp-action="Create">
        
        <div asp-validation-summary="ModelOnly"></div>
               
        <div class="col-auto">
            <div>
                <input class="form-control" asp-for="Usuario" type="text" placeholder="Usuario" />
                <span asp-validation-for="Usuario"></span>
            </div>
        </div>
                
        <div class="col-auto">
            <div>
                 <input class="form-control" asp-for="Contrasena" type="password" placeholder="Contraseña" />
                 <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
        </div>

        <div class="col-auto">
            <select placeholder="Rol" asp-for="Rol" class="form-control">
                 <option value="">Seleccione Rol</option>
                 <option value="Administrador">Administrador</option>
                 <option value="General">General</option>
                 <option value="Libre">Libre</option>
            </select>
            <span asp-validation-for="Rol" class=""></span>
        </div>

        <div class="col-auto">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

        <div>
            <a class="btn btn-warning" asp-action="Index">Volver</a>
        </div>
    </form>
</div>


